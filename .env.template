# Identidad de entorno
ENVIRONMENT=production
RUNTIME_PROFILE=production

# Exchange (único activo soportado en live)
SYMBOL=BTC/USDT
TIMEFRAME=5m
BINANCE_API_KEY=replace_with_binance_api_key
BINANCE_API_SECRET=replace_with_binance_api_secret
BINANCE_TESTNET=true
CONFIRM_MAINNET=false

# Persistencia
POSTGRES_DSN=postgresql+asyncpg://trading:trading_password@localhost/reco_trading_prod
POSTGRES_ADMIN_DSN=
REDIS_URL=redis://localhost:6379/0

# Riesgo y límites
RISK_PER_TRADE=0.01
MAX_DAILY_LOSS=0.02
MAX_DAILY_DRAWDOWN=0.03
MAX_GLOBAL_DRAWDOWN=0.12
MAX_TOTAL_EXPOSURE=0.70
MAX_ASSET_EXPOSURE=0.35
CORRELATION_THRESHOLD=0.75
MAX_CONSECUTIVE_LOSSES=3

# Modo conservador + kernel
CONSERVATIVE_MODE_ENABLED=true
LOOP_INTERVAL_SECONDS=5

# Toggle de estrategias permitidas
ENABLE_DIRECTIONAL_STRATEGY=true
ENABLE_ADAPTIVE_MARKET_MAKING=true
ENABLE_MULTI_EXCHANGE_ARBITRAGE=false
